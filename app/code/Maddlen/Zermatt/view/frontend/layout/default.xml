<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <script src="Maddlen_Zermatt::index.js" defer="defer"/>
    </head>
    <body>
        <referenceContainer name="before.body.end">
            <container name="zermatt.variables">
                <block name="zermatt.variables.config" template="Maddlen_Zermatt::variables/config.phtml">
                    <arguments>
                        <argument name="config" xsi:type="object">Maddlen\Zermatt\App\Config</argument>
                    </arguments>
                </block>
            </container>
            <block name="zermatt.variables.init" template="Maddlen_Zermatt::init.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>
